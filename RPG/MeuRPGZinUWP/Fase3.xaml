            </Image>

            <Image x:Name="fortalecedora" Source="Assets/pocao_fortalecedora.png" Height="50" Width="50"  Canvas.Left="558" Canvas.Top="60" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="24.821"/>
                </Image.RenderTransform>
            </Image>


             FontSize="35" FontFamily="Berkahi Blackletter" TextWrapping="Wrap" Canvas.Left="60" Canvas.Top="4"></TextBlock>

            <Image Source="Assets/tempo.png" Width="45" Height="40" Canvas.Left="10" Canvas.Top="4"></Image>

            <Image x:Name="lab2" Stretch="UniformToFill" Source="Assets/lab_vulcao.png" Height="700" Width="700" FocusVisualPrimaryBrush="Black" Canvas.Top="49">
            </Image>

            <Image x:Name="feiticeiraImg" Height="56" Width="56" Canvas.Top="683" Canvas.Left="400" >
                <Image.RenderTransform>
                    <TranslateTransform x:Name="feiticeiraMovimento"/>
                </Image.RenderTransform>
            </Image>

            <Image x:Name="moeda0" Source="Assets/moeda_front.png"  Height="36" Width="36" Canvas.Top="690" Canvas.Left="490" Stretch="Fill" >
            </Image>

            <Image x:Name="moeda1" Source="Assets/moeda_front.png"  Height="36" Width="36" Canvas.Top="690" Canvas.Left="567" Stretch="Fill" >
            </Image>

            <Image x:Name="moeda2" Source="Assets/moeda_front.png"  Height="36" Width="36" Canvas.Top="604" Canvas.Left="105" Stretch="Fill" >


            <TextBlock Width="181" Height="65" Text="ui ui ui" Foreground="Black" FontSize="50" Canvas.Left="756" 
             Canvas.Top="116" RenderTransformOrigin="0.523,0.675" FontFamily="Berkahi Blackletter"></TextBlock>

            <TextBlock Width="149" Height="65" Text="morri" Foreground="Black" FontSize="50" Canvas.Left="764" 
             Canvas.Top="166" RenderTransformOrigin="0.523,0.675" FontFamily="Berkahi Blackletter" ></TextBlock>

            <TextBlock Width="1114" Height="64" Text="Você foi derrotada! Clique em continuar para batalhar novamente" 
                       FontFamily="Cardinal" FontSize="50" Canvas.Left="93" Canvas.Top="489" Foreground="White"></TextBlock>

            <Button x:Name="continuar"  Width="300" Height="103" Canvas.Left="486" FontFamily="Cardinal" FontSize="60" BorderBrush="Black" Foreground="Black"
            Canvas.Top="573"   Click="HandleClick" Background="DarkGray" Content="Continuar">

            </Button>


        </Canvas>

    </Grid>
</Page>

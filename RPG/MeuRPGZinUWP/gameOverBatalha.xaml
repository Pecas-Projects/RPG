    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MeuRPGZinUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="700" Width="1300"
    Background="Black">


    <Grid>

        <Canvas Background="Gray">

            <TextBlock Width="486" Height="100" Text="GAME OVER" FontFamily="Cardinal" FontSize="60" Canvas.Left="432" Canvas.Top="12" Foreground="White"></TextBlock>

            <Image x:Name="feiticeiraMortaImg" Source="Assets/feiticeira_morta.png" Width="300" Height="300" Canvas.Left="432" Canvas.Top="150"></Image>

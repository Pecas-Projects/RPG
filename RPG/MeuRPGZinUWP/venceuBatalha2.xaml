<Page
    x:Class="MeuRPGZinUWP.venceuBatalha2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MeuRPGZinUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="700" Width="1300"
    Background="Black">


    <Grid >

        <Canvas Background="Gray">

            <Image Source="Assets/ceu_desfocado.png" Height="700" Width="1300" Stretch="UniformToFill" ></Image>

            <Image Source="Assets/fada_de_chapeu.png" Width="200" Height="200" Canvas.Left="1090" Canvas.Top="10"></Image>
            <Image Source="Assets/moeda_front.png" Width="81" Height="81" Canvas.Left="1109" Canvas.Top="314" RenderTransformOrigin="0.084,0.528"></Image>
            
            <TextBlock Height="97" FontSize="55"  FontFamily="Cardinal" Foreground="White"
        Text="Parabéns feiticeira, você derrotou o Rei das Fadas!" Canvas.Left="39" Canvas.Top="35" Width="1061"/>

            <TextBlock Height="64"  FontSize="50" Foreground="White" FontFamily="Cardinal"
        Text="Agora a Pedra do Ar está em sua posse, aumentando seu" Canvas.Left="39" Canvas.Top="144" RenderTransformOrigin="0.451,0.69"/>

            <TextBlock Height="73"  FontSize="50" Foreground="White" FontFamily="Cardinal"
        Canvas.Left="165" Canvas.Top="223"><Run Text="escudo"/><Run Text=". Use seus poderes sabiamente."/></TextBlock>


            <TextBlock Height="100"  FontSize="55" Foreground="White" FontFamily="Cardinal"
        Text="Como recompensa por sua vitória você receberá " Canvas.Left="130" Canvas.Top="320" Width="884"/>

            <TextBlock Width="80" Foreground="White" Height="80" Text="5" FontFamily="Cardinal" FontSize="70" Canvas.Left="1041" Canvas.Top="314" RenderTransformOrigin="0.5,0.5">
            </TextBlock>


            <TextBlock Height="100"  FontSize="55" Foreground="White" FontFamily="Cardinal"
        Text="Sua jornada agora a levará ao labirinto do Reino Ignis." Canvas.Left="117" Canvas.Top="420" Width="1155"/>

            <Button x:Name="irLab"  Canvas.Left="596" Canvas.Top="559"  Content="Iniciar Labirinto" FontSize="50" Foreground="Black"
                    Click="IrLab_handleClick"
             Background="DarkGray" RenderTransformOrigin="0.344,0.519"  Width="318" Height="100" FontFamily="Cardinal" BorderBrush="Black">
            </Button>

            <Button x:Name="pedraAra" Width="160" Click="pedraAr_handleClick" Height="160" Canvas.Left="380" Canvas.Top="526" Background="Transparent">
                <Image Source="Assets/pedras_do_ar.png" Width="160" Canvas.Top="521" Height="160" Canvas.Left="552" Margin="0,-16,-20,3" ></Image>
            </Button>

            <Button x:Name="ajuda"  Content="?" Width="100" Height="100" FontFamily="Cardinal" Background="LightSteelBlue"
                    Click="Ajuda_handleClick"
                    FontSize="85" Canvas.Left="39" Canvas.Top="559" BorderBrush="Black"></Button>

        </Canvas>


    </Grid>
</Page>
